<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grass.grasslib.ScanActivity">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        />
    <com.grass.views.zbar.view.ZbarViewfinderView
        android:id="@+id/scan_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:inner_width="200dp"
        app:inner_height="200dp"
        app:inner_margintop="150dp"
        app:inner_corner_color="#EB6121"
        app:inner_corner_length="15dp"
        app:inner_corner_width="2dp"
        app:inner_scan_bitmap="@mipmap/module_yz_scan"
        app:inner_scan_speed="20"
        app:inner_scan_iscircle="false"
        app:inner_scan_line_type="0"
        />


</RelativeLayout>
